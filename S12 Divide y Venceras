public class Busquedas 
{
    // Búsqueda lineal
    public static int busquedaLineal(int[] lista, int objetivo) {
        for (int i = 0; i < lista.length; i++) {
            if (lista[i] == objetivo) {
                return i; // Devuelve la posición si lo encuentra
            }

        }
        return -1; // No encontrado
    }

    // Búsqueda binaria (lista debe estar ordenada)
    public static int busquedaBinaria(int[] lista, int objetivo) {
        int izquierda = 0, derecha = lista.length - 1;

        while (izquierda <= derecha) {
            int medio = (izquierda + derecha) / 2;

            if (lista[medio] == objetivo) {
                return medio;
            } else if (lista[medio] < objetivo) {
                izquierda = medio + 1;
            } else {
                derecha = medio - 1;
            }
        }
        return -1; // No encontrado
    }

    public static void main(String[] args) {
        int[] numeros = {1, 3, 5, 7, 9, 11, 13, 15};
        int valor = 7;

        System.out.println("Búsqueda lineal: " + busquedaLineal(numeros, valor));
        System.out.println("Búsqueda binaria: " + busquedaBinaria(numeros, valor));
    }
}
